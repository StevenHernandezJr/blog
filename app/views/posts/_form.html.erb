<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :content,
                  wrapper: false,
                  input_html: { class: "textarea" },
                  label_html: { class: "label" } %>
    </div>
  </div>

  <%= f.button :submit, class: "button is-info" %>
<% end %>