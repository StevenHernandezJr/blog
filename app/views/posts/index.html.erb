<section class="section">
  <div class="container">
    <h1 class="title is-1">All Posts</h1>
    <%= link_to "Create new post", new_post_path %>
  </div>
</section>

<section class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <%= link_to post do %>
        <h3 class="subtitle is-3"><%= post.name %></h3>
      <% end %>
      <p><%= post.content %></p>
    <% end %>
  </div>
</section>