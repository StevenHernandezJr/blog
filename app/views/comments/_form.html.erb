<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :content,
                  wrapper: false,
                  label: false,
                  input_html: { class: "textarea" } %>
    </div>
  </div>

  <%= f.button :submit, "Leave a Comment", class: "button is-info" %>
<% end %>